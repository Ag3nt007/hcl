import java.util.ArrayList;

public class subs {
	public static void main (String [] args)
	{
		int[] array = {1,3,1,6,7,2,1,5,7,8,4,11};
		ArrayList<Integer> retArray = new ArrayList<Integer>();
		int count = 0;
		int max = 0;
		int j = 0;
		int i = 1;
		
		for(i = 0; i < array.length; i++)
		{
			for (j = 1; j < array.length; j++)
			{
				if (array[i] < array[j] && retArray.get(i) < retArray.get(j))
				{
					retArray.add(array[i]);
				}
			}	
		}
		for(i = 0; i < array.length; i++)
		{
			if(max < retArray.get(i))
			{
				max = retArray.get(i);
			}
		}
		System.out.println("Longest sequence is: " + (max - 1));

		System.out.print(retArray);
	}
	
	
}
