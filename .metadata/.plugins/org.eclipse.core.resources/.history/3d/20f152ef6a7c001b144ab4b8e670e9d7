import java.awt.Desktop;
import java.util.Arrays;
import java.util.List;
import java.util.Scanner;
import java.util.Collections;
import java.io.File;
import java.io.IOException;

public class LockedMe {

    public static void main(String[] args) {
    	optionsSelection();
    }
    
    private static void optionsSelection() {
        System.out.println("\nEnter your choice:\t");
        Scanner sc = new Scanner(System.in);
        int  options =  sc.nextInt();
        String[] arr =
        	{
        		"1. Show current files.",
                "2. File Operations",
                "3. Close Application",
             };
        int[] arr1 = {1,2,3};
        int opt = arr1.length;
        for(int i = 0; i < opt; i++){
            System.out.println(arr[i]);
        }
        

        for(int j=1; j<=opt; j++){
            if(options==j){
                switch (options){
                    case 1:
                    	sortFiles();                     
                        optionsSelection();
                        break;
                        
                    case 2:
                        System.out.println("File Operations:");
                        String[] arr2 =
                        	{
                        		"1. Add",
                                "2. Delete",
                                "3. Search",
                             };
                        int[] arr3 = {1,2,3};
                        int opt1 = arr3.length;
                        for(int i = 0; i < opt1; i++){
                            System.out.println(arr3[i]);
                        }
                        
                        System.out.println("\nEnter your choice:\t");
                        Scanner sc1 = new Scanner(System.in);
                        int  fileOps =  sc1.nextInt();
                        	switch (fileOps){
                    		case 1:
                    			System.out.println("Add");
                    		break;
                    		case 2:
                    		System.out.println("Delete");
                    		break;
                    		case 3:
                    			System.out.println("Search");
                    			searchFiles();
                    		default:
                    		System.out.println("Invalid choice!");
                            break;
                        	}
                        optionsSelection();
                        break;
                        
                    case 3:
                    	closeApp();
                        break;
                        
                    default:
                        System.out.println("You have made an invalid choice!");
                        break;
                }
            }
        }

    }
    private static void closeApp() {
        System.out.println("Goodbye!");
            }
    private static void searchFiles() {
    	
    }
    private static void sortFiles() {
    	try{
    	File dir = new File("C:\\Users\\%userprofile%\\eclipse-workspace\\hcl labs\\Test Files");
		File[] files = dir.listFiles();
		for(File file:files)
	      {
	        System.out.println(file.getName());
	      }
    	}
	    catch(Exception e){
	    	System.out.println("No files found!\n");
	    	}
    }
  
}
